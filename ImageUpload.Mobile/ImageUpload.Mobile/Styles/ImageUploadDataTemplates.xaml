<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImageUpload.Mobile.Styles.ImageUploadDataTemplates">
    <DataTemplate x:Key="MainFlyoutTemplate">
        <ViewCell>
            <Grid Padding="5,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Margin="5" WidthRequest="30" Source="{Binding IconImageSource}" HeightRequest="30"/>
                <Label Grid.Column="1" VerticalOptions="Center" Text="{Binding Title}" />
            </Grid>
        </ViewCell>
    </DataTemplate>
</ResourceDictionary>